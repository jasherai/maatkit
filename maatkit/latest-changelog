#!/usr/bin/perl

use strict;
use warnings FATAL => 'all';

my @packages = @ARGV;
if ( !@packages ) {
  @packages =
     map { m/(mk-.*)/g }
     grep { -f "$_/Changelog" }  <../mk-*>;
}

foreach my $package ( @packages ) {
   # Find the desired version number and changelog.
   my $file;
   open($file, "<", "../$package/Changelog")
      or die $!;
   my $contents = do { local $/ = undef; <$file>; };
   close $file;
   die "$package has a tab in its changelog"
      if $contents =~ m/\t/;
   my ($log) = $contents =~ m/^(200.*?)(?=^200|\Z)/sm;
   if ( @packages > 1 ) {
      print "Changelog for $package:\n\n";
   }
   $log =~ s/\s*$//gs;
   print $log, "\n\n";
}
