#!/bin/bash

CURDIR=`/bin/pwd`
BASEDIR=/usr
MYSQLD_SAFE=`which mysqld_safe`
PIDFILE="/tmp/master/data/mysql_sandbox16045.pid"
if [ -f $PIDFILE ]
then
    echo "sandbox server already started (found pid file $PIDFILE)"
else
    cd $BASEDIR
    $MYSQLD_SAFE --defaults-file=$CURDIR/my.sandbox.cnf > /dev/null 2>&1 &
    cd $CURDIR
    sleep 3
fi

if [ -f $PIDFILE ]
then
    echo "sandbox server started"
else
    echo "sandbox server not started yet"
fi

